create table T_AUTENTICACION_ORIGENES
(
  id_autenticacion_origen            VARCHAR2(1) not null,
  nombre                             VARCHAR2(100) not null,
  detalle                            VARCHAR2(2000),
  activo                             VARCHAR2(1) default 'N' not null,
  prefijo_dominio                    VARCHAR2(50),
  metodo_validacion_credenciales     VARCHAR2(10),
  parametros_validacion_credenciales VARCHAR2(4000)
)
;
comment on table T_AUTENTICACION_ORIGENES
  is 'Orígenes de autenticación';
comment on column T_AUTENTICACION_ORIGENES.id_autenticacion_origen
  is 'Identificador del origen de autenticación';
comment on column T_AUTENTICACION_ORIGENES.nombre
  is 'Nombre del origen de autenticación';
comment on column T_AUTENTICACION_ORIGENES.detalle
  is 'Detalles adicionales del origen de autenticación';
comment on column T_AUTENTICACION_ORIGENES.activo
  is 'El origen de autenticación está activo? (S/N)';
comment on column T_AUTENTICACION_ORIGENES.prefijo_dominio
  is 'Prefijo de dominio del origen de autenticación';
comment on column T_AUTENTICACION_ORIGENES.metodo_validacion_credenciales
  is 'Método de validación de credenciales del origen de autenticación';
comment on column T_AUTENTICACION_ORIGENES.parametros_validacion_credenciales
  is 'Parámetros de validación de credenciales del origen de autenticación';
alter table T_AUTENTICACION_ORIGENES
  add constraint PK_AUTENTICACION_ORIGENES primary key (ID_AUTENTICACION_ORIGEN);
alter table T_AUTENTICACION_ORIGENES
  add constraint CK_AUTENTICACION_ORIGENES_ACTIVO
  check (ACTIVO IN ('S', 'N'));
alter table T_AUTENTICACION_ORIGENES
  add constraint CK_AUT_ORI_PAR_VAL_CREDENCIALES
  check (PARAMETROS_VALIDACION_CREDENCIALES IS JSON);

